<div id="<%= dom_id article %>">

  <div class="card mb-1">
  
    <div class="card-header">
      <% if article.image.attached? %>
        <div class="d-flex justify-content-center mb-1">
          <%= image_tag article.image, class: "img-fluid", style: "max-width: 600px; max-height: 300px; width: 100%; height: auto;" %>
        </div>
      <% end %>

      <p class="my-1">
          <strong class="d-inline-block">Lugar</strong> : <%= article.location.name %>
      </p>

      <p class="mb-2">
          <strong class="d-inline-block">Creado el</strong> : <%= article.when.strftime("%d-%m-%Y") %>
      </p>
    </div>

    <div class="card-body">
      <h5 class="card-title mb-2"> <%= article.title %> </h5>
      <p class="card-text"> <%= article.description %> </p>

      <div class="d-flex justify-content-start mb-2"> 
        <%= link_to "Ver artÃ­culo ".html_safe + " <span class='top-0 badge rounded-pill bg-danger'>#{article.comments.count}</span>".html_safe, article, class: "btn btn-primary mt-2" %>
      </div>

      <div class="d-flex flex-wrap justify-content-center">
        <% Article::Kinds.each do |kind| %>
            <span class="me-2 mb-2"> 
                <%= button_to "#{Article::KindsSpanish[kind]}", new_user_reaction_path(article_id: article.id, reaction_type: "article", kind: kind), method: :post, class: "btn btn-success w-100 rounded-pill" %> 
            </span>
        <% end %>
      </div>

    </div>

  </div>

</div>
